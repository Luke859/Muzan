<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projet Muzan</title>
</head>
<body>
    <%- include('./composants/header') %>
    <br>
    <section>
        <form action="/post" method="POST">
            <label for="titre">Titre</label>
            <input type="text" id="titre" name="titre">
            <label for="message">Message</label>
            <textarea name="message" id="message" cols="20" rows="5"></textarea>
            <br>
            <input type="submit" value="Enregistrer">
        </form>
    </section>
    <section>
        <h1>SELECT posts de la BDD MySQL</h1>

        <% for(i= 0; i < resultat.length; i++) { %>

            <div class="card-box">
                <div class="card-box-body">
                    <p>Id : <%= resultat[i].idposts %></p>
                    <h5 class="card-box-title"><%= resultat[i].titre %></h5>
                    <p class="card-box-text"><%= resultat[i].message %></p>
                </div>
            </div>
            <br>

        <% } %>
    </section>
</body>
</html>

